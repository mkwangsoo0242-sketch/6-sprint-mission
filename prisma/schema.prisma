generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum ProductStatus {
    ACTIVE
    DRAFT
    ARCHIVED
}

model Product {
    id          String        @id @default(uuid())
    name        String
    description String
    price       Float
    tags        Json
    slug        String        @unique
    status      ProductStatus @default(ACTIVE)
    stock       Int           @default(0)
    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @updatedAt

    @@index([createdAt])
    @@index([name])
}
